<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.faziodev.cccandroidwear.activities.MainActivity"
    tools:deviceIds="wear_round">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a round layout, seen on watches like the LG Watch Urbane, Huawei Watch, and Moto 360."
        android:layout_alignWithParentIfMissing="false"
        android:padding="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:onClick="sendMessageToDataApi"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
